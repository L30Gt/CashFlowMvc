@model IEnumerable<CashFlowMvc.Models.LancamentoCategoriaViewModel>
@{
    ViewBag.Title = "Index";
}
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<h2>Categorias do Lançamento</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Descrição")
        </th>
        <th>
            @Html.DisplayName("Categoria")
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Lancamento.Descricao) </td>
            <td>@Html.DisplayFor(modelItem => item.Categoria.Nome) </td>
            <td>@Html.ActionLink("Deletar", "Delete"
                         , new { categoriaId = item.CategoriaId, lancamentoId = item.LancamentoId }
                         , new { onclick = "return confirm('Deseja realmente deletar esta categoria ?');" })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Retornar aos Lançamentos", "Index", "Lancamentos")
</div>